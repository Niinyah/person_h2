jobs:
  ci:
    runs-on: ubuntu-latest
    env:
      SPRING_PROFILES_ACTIVE: test
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-java@v4
        with:
          distribution: 'microsoft'
          java-version: '21'
          cache: 'maven'
      - name: Build & test
        run: mvn -B clean verify

  deploy:
    needs: ci 
    runs-on: ubuntu-latest
